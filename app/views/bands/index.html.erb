<p id="notice"><%= notice %></p>

<h1>Bands</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @bands.each do |band| %>
			<tr>
				<td><% band.name %></td>
				<td><%= link_to 'show', band %></td>
				<td><%= link_to 'edit', edit_band_path(band) %></td>
				<td><%= link_to 'destroy', band, method: :delete, data: { confirm: "Are you sure ?", remote: true}, class: "delete" %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<div id="new-band">
	<td><%= link_to 'new band', new_band_path, remote: true %></td>
</div>